<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'm-t'}) do |f| %>
  <div class="form-inputs">
    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Password', class: "form-control", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="col-xs-12">
          <label for="remember_me">
            <%= f.check_box :remember_me, class: "js-icheck" %> Remember me
          </label>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button "Login", class: 'btn btn-custom btn-bordred btn-block waves-effect waves-light' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
